//check(1-7)in days using switch case
#include <stdio.h>

int main()
{
    int day;
    
    printf("enter the number");
    scanf("%d",&day);
    
    //switch case
    switch(day){
        case 1:
        printf("monday\n");
        break;
        
        case 2:
        printf("tuesday\n");
        break;
        
        case 3:
        printf("wenseday\n");
        break;
        
        case 4:
        printf("thursday\n");
        break;
        
        case 5:
        printf("friday\n");
        break;
        
        case 6:
        printf("saturday\n");
        break;
        
        case 7:
        printf("sunday\n");
        break;
        
        default:
        printf("invaild number");
    }

    return 0;
}
